                  <form action="/register" method="POST" class="card-body">
                      
                      <div class="form-group row">
                          <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                          <div class="col-12">
                              <input type="text" placeholder="Email" class="form-control" name="email" required 
                              value="<%= (typeof form != 'undefined')? form.email : '' %>" >
                          </div>
                      </div>

                      <div class="form-group row">
                        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                        <div class="col-12">
                            <input type="text" placeholder="Username" class="form-control" name="username" required 
                            value="<%= (typeof form != 'undefined')? form.username : '' %>" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                        <div class="col-12">
                            <input type="text" placeholder="First Name" class="form-control" name="fname" required 
                            value="<%= (typeof form != 'undefined')? form.fname : '' %>" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                        <div class="col-12">
                            <input type="text" placeholder="Last Name" class="form-control" name="lname" required 
                            value="<%= (typeof form != 'undefined')? form.lname : '' %>" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                        <div class="col-12">
                            <input type="text" placeholder="Date of Birth (DD/MM/YYYY)" class="form-control" name="born" required 
                            value="<%= (typeof form != 'undefined')? form.born : '' %>" >
                        </div>
                    </div>
                      
                      <div class="form-group row">
                          <!-- <label for="password" class="col-4 col-form-label">Password</label> -->
                          <div class="col-12">
                              <input type="password" placeholder="Password" class="form-control" name="password" required 
                              value="<%= (typeof form != 'undefined')? form.password : '' %>" >
                          </div>
                      </div>

                      <div class="form-group row">
                        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
                        <div class="col-12">
                            <input type="password" placeholder="Re-Confirm Password" class="form-control" name="password2" required >
                        </div>
                    </div>

                      <div class="form-group row">
                          <label style="color:#2e2e2e"> --- - - - - - -</label>
                        <input  type="submit" value="Register" class="btn btn-outline-light btn-lg px-6">
                      </div>
                    </form>
    
