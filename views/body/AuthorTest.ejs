
  <div class="input-group">

    <form action="/authors/search" method="POST" class="form-inline my-2 my-lg-0">
      <div class="input-group mb-3" style="margin: 16px 0">
          <div class="input-group-prepend" >
            <label class="input-group-text" for="f1">Search By: </label>
          </div>
          <select class="custom-select" id="fl" name="fl">
            <option selected disabled>Choose Type</option>
            <option value="1">All Authors</option>
            <option value="2">Followed</option>
            <option value="3">Not Followed</option>
          </select>
        </div>
      <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search for Authors" aria-label="Search">
      <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<div class="imae"></div>


  <div class="container">
    <h5>Unfollowed Authors with books in your Bookshelf:</h5>
    
      <ul>
      <%  for (var i = 0; i< AfLen; i++) {  %>
          
        <li class="authorSuggestion">
                <a = class = "single" href = "/authors/<%=authors[i].AUTHOR_ID%>" ><%=  authors[i].FIRST_NAME + ' ' + authors[i].LAST_NAME   %> </a>
                <ul>Books liked (<%=authors[i].C %>):
                  <%  for (var j = 0; j< Math.min(books[i].length, 3); j++) {  %>
                      <li class = "bookSuggestion">
                        <a = class = "single" href = "/books/<%=books[i][j].BOOK_ID%>" ><%=  books[i][j].TITLE  %> </a>
                      </li>

                    <%  }  %>
                
                  </ul>
        </li>
      
        
        
    <%  }  %>
      </ul>


  </div>