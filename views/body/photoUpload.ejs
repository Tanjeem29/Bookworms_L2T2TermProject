    <div class="form-group row">
      <!-- <label for="email" class="col-4 col-form-label">email</label> -->
      <div class="col-12">
        <label> Bio:</label>
          <input type="textarea" placeholder="Short Bio" class="form-control" name="bio" required 
          value="<%= (typeof form != 'undefined')? form.bio : '' %>" >
