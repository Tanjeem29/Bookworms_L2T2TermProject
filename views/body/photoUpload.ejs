
<div class="photo-group">
    <label for="photo">Profile Picture:</label>    
    <img src="<%= (typeof form != 'undefined')? form.photo : '' %>" alt="Profile picture" width="200">
    <form method="post" enctype="multipart/form-data" action="/save_photo">
        <input type="file" name="photo">
        <input type="submit" value="Change Profile Picture">
    </form>
</div>

<form action="/upload" method="POST" class="card-body">

    <div class="form-group row">
        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
        <div class="col-12">
            <label for="username"> Username:</label>
            <input type="text" placeholder="Username" id = "username" class="form-control" name="username" required 
            value="<%= (typeof form != 'undefined')? form.username : '' %>" >
        </div>
    </div>
    <div class="form-group row">
        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
        <div class="col-12">
          <label> First Name:</label>
            <input type="text" placeholder="First Name" class="form-control" name="fname" required 
            value="<%= (typeof form != 'undefined')? form.fname : '' %>" >
        </div>
    </div>
    <div class="form-group row">
        <!-- <label for="email" class="col-4 col-form-label">email</label> -->
        <div class="col-12">
          <label> Last Name:</label>
            <input type="text" placeholder="Last Name" class="form-control" name="lname" required 
