<h2>Name: <%=reader.FIRST_NAME + ' ' + reader.LAST_NAME%></h2>
<h3>Username: <%=reader.USERNAME%></h3>






<% if(FollowStatus == 0) { %>
                
    <h6>
        <b>Not Followed </b>
    </h6>
    <form action="/readers/<%=reader.READER_ID%>" method="POST">
        <button name="follow" value="1">Follow this Reader</button>
    </form>
    
<% } %>

<% if(FollowStatus == 1) { %>
                
    <h6>
        <b> Following this Reader </b>
    </h6>
    <form action="/readers/<%=reader.READER_ID%>" method="POST">
        <button name="follow" value="0">Unfollow this Reader</button>
    </form>
    
<% } %>


