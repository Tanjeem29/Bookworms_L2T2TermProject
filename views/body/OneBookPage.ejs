<div class="container">
    <div class="row">
        <div class="col-3">
            <img src="<%=photo%>" alt="Responsive image" class="img-thumbnail" width="200" >
        </div>

        <div class="col-9" style="padding-top: 20px;">
            <h4><%=book.TITLE%> <span class="card-subtitle mb-2 text-muted"></span></h4>
            <p class="h6"><span class="card-subtitle mb-2 text-muted"><b>Preview:</b> <%=book.PREVIEW%> </span></p>
            <% if(ReadStatus == 0) { %>
                
                <h6>
                    <b>Not added to bookshelf </b>
                </h6>
                <form action="/books/readStatus/<%=book.BOOK_ID%>" method="POST">
                <select name="ReadStatus" id="ReadStatus" onchange="this.form.submit()">
                    <option value="none" selected disabled hidden>Add to Bookshelf</option>
                    <option value="1">Already Read</option>
                    <option value="2">Currently Reading</option>
                    <option value="3">Want to Read</option>
                </select>
                </form>
                
            <% } %>
            
            <% if(ReadStatus == 1) { %>
                            
                <h6>
                    <b> Already Read </b>
                </h6>
                <form action="/books/readStatus/<%=book.BOOK_ID%>" method="POST">
                    <select name="ReadStatus" id="ReadStatus" onchange="this.form.submit()">
                        <option value="none" selected disabled hidden>Already Read </option>
                        <option value="2">Currently Reading</option>
                        <option value="3">Want to Read</option>
                        <option value="4">Remove From Shelf</option>
                    </select>
                </form>
                
            <% } %>
            
            <% if(ReadStatus == 2) { %>
                            
                <h6>
                    <b> Currently Reading </b>
                </h6>
                <form action="/books/readStatus/<%=book.BOOK_ID%>" method="POST">
                    <select name="ReadStatus" id="ReadStatus" onchange="this.form.submit()">
                        <option value="none" selected disabled hidden>Currently Reading</option>
                        <option value="1">Already Read</option>
                        <option value="3">Want to Read</option>
                        <option value="4">Remove From Shelf</option>
                    </select>
                </form>
                
            <% } %>
            
            <% if(ReadStatus == 3) { %>
                            
                <h6>
                    <b> Want to read </b>
                </h6>
                <form action="/books/readStatus/<%=book.BOOK_ID%>" method="POST">
                    <select name="ReadStatus" id="ReadStatus" onchange="this.form.submit()">
                        <option value="none" selected disabled hidden>Want to read</option>
                        <option value="1">Already Read</option>
                        <option value="2">Currently Reading</option>
                        <option value="4">Remove From Shelf</option>
                    </select>
                </form>
                
            <% } %>
        </div>

    </div>
    <hr style="border:1px solid #f1f1f1d0">
</div>   



